<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitchClient" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4d4d4d</item>
        <item name="colorOnPrimary">#4d4d4d</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#666666</item>
        <item name="colorOnSecondary">#666666</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">#4d4d4d</item>
        <item name="theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <style name="BottomNavigation">
        <item name="theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:background">#4d4d4d</item>
    </style>

    <style name="MainFragmentStyle">
        <item name="android:background">#666666</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>