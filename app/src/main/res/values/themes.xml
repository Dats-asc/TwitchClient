<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitchClient" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4d4d4d</item>
        <item name="colorOnPrimary">#4d4d4d</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#666666</item>
        <item name="colorOnSecondary">#666666</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">#4d4d4d</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/lightGray</item>
        <item name="tabIndicatorColor">@color/lightGray</item>
        <item name="tabBackground">@color/onPrimary</item>
    </style>

    <style name="BottomNavigation">
        <item name="theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:background">#4d4d4d</item>
    </style>

    <style name="ChannelInfoText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.SignIn" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/onSecondary</item>
    </style>

    <style name="MainFragmentStyle">
        <item name="android:background">@color/onPrimary</item>
    </style>

    <style name="Progressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/lightGray</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>